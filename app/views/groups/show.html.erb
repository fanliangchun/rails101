<h1>Group List</h1>
<hr>

<div class="col-md-12">

	<div class="group">
		<% if  current_user && current_user == @group.user %>
			<%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right") %>
		<% end %>
	</div>

	<div>
		<h2><%= @group.title %></h2>
	</div>
	<div>
		<p>
			<%= simple_format(@group.description) %>
		</p>
	</div>
	
</div>